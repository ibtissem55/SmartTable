<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
		xmlns:richtexteditor="sap.ui.richtexteditor">
	<ResponsivePopover title="Design your description here">
		<beginButton>
			<Button text="Save" press="onSaveDescr" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="handleCloseButton" />
		</endButton>
		<content>
		<richtexteditor:RichTextEditor id="RichDescription" value="{oModelMNA>Description}"/>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>